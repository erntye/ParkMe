<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/parent_layout"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/parking_suggestion_box.png"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/parking_suggestion_box">


    </ImageView>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/parking_suggestion_box.png"
        android:layout_alignTop="@+id/parking_suggestion_box.png"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="66dp"
        android:paddingTop="10dp"
        android:text="test"
        android:textColor="@color/colorMain"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/address"
        android:layout_below="@+id/availability"
        android:text="test"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/address"
        android:layout_below="@id/address"
        android:text="test"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distance"
        android:layout_alignRight="@id/parking_suggestion_box.png"
        android:paddingRight="10dp"
        android:text="test"
        android:textSize="12dp"
        android:textStyle="bold" />


</RelativeLayout>