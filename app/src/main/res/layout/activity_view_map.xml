<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    tools:context="com.example.chiilek.parkme.ViewMap.ViewMapActivity">

    <LinearLayout
        android:id="@+id/black_border"
        android:background="#000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <LinearLayout
        android:id="@+id/grey_border_2"
        android:background="@color/color2"
        android:layout_below="@+id/black_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grey_border_2"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />


    <LinearLayout
        android:id="@+id/grey_border"
        android:background="@color/color2"
        android:layout_below="@+id/place_autocomplete_fragment"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/grey_border"/>

    <Button
        android:id="@+id/view_map_recommendations_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:visibility="gone"
        android:background="@drawable/suggest_car_parks_2"
        android:onClick="suggestCarParks"/>

</RelativeLayout>